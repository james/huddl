
<%= partial :group_header %>

<div class="row">
  <div class="col-sm-6">
    <% if @group.intro_for_members %>  
      <div style="margin-top: 20px">
        <%= @group.intro_for_members %>
        <hr />
      </div>
    <% end %>  
    <div data-pagelet-url="/h/<%=@group.slug%>/todos">
      <%= partial :todos %>
    </div>
    <h2>Online now</h2>
    <% @group.members.where(:last_active.gt => 5.minutes.ago).each { |account| %><%= partial :'accounts/square', :locals => {:account => account, :title => "#{account.name}#{if account.last_active; "<br />#{time_ago_in_words account.last_active} ago"; end}", :style => 'width: 75px; margin-bottom: 5px; margin-right: 5px;'} %><% } %>
  </div>  
  <div class="col-sm-6">
    <div data-pagelet-url="/h/<%=@group.slug%>" data-pusher-channel="notifications.<%=@group.slug%>" style="margin-top: 10px">
      <%= partial :newsfeed, :locals => {:notifications => @notifications} %>
    </div>
  </div>
</div>